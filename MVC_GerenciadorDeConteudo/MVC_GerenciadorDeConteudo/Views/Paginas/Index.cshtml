@{

        ViewBag.Title = "Paginas";
        List<Business.Pagina> paginas = ViewBag.Paginas;
    }

    <div class="jumbotron">
        <h3>Paginas</h3>l
        <div>
            <a href="/paginas/novo" class="btn btn-default">Nova Pagina</a>
        </div>
        <table class="table">
            <tr>
                <td>ID</td>
                <td>Nome</td>
                <td>Data</td>
            </tr>
        </table>
        <table class="table">
            @foreach (var p in paginas)
            {
            <tr>
                <td>@p.Nome</td>
                <td>@p.Nome</td>
                <td>@p.Data</td>
            </tr>
            }
        </table>

    </div>
